{
    "version": 2,
    "builds": [
      {
        "src": "core/wsgi.py",
        "use": "@vercel/python",
        "config": {"maxLambdaSize": "15mb", "runtime": "python3.14"}
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles_buildS"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "core/wsgi.py"
      },
      {
        "src": "/static/(.*)",
        "dest": "core/wsgi.py"
      }
    ]
  }
  